<form action="/asset-notification/index/save" method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            required
        >
    </div>

    <div class="form-group">
        {% set idAsset = app.request.query.get('id-ssp-asset') %}
        <label for="service_interval">Service Interval:</label>
        <input
            type="text"
            id="service_interval"
            name="service_interval"
            class="form-control"
            placeholder="e.g., P1M (1 month) or 30 days"
            required
        >

        <input
            type="hidden"
            id="ssp_asset_id"
            name="ssp_asset_id"
            class="form-control"
            placeholder="e.g., P1M (1 month) or 30 days"
            value="{{ idAsset }}"
            required
        >
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
