<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" namespace="Orm\Zed\AssetNotification\Persistence" package="src.Orm.Zed.AssetNotification.Persistence" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd">

    <table name="spy_ssp_asset_notification">
        <column name="id_asset_notification" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="name" type="VARCHAR" size="255" required="true"/>
        <column name="service_interval" type="VARCHAR" size="255" required="true"/>
        <column name="fk_ssp_asset" required="true" type="INTEGER"/>

        <foreign-key name="spy_ssp_asset_notification-fk_asset" foreignTable="spy_ssp_asset" phpName="SspAsset" refPhpName="SspAsset">
            <reference local="fk_ssp_asset" foreign="id_ssp_asset"/>
        </foreign-key>

        <id-method-parameter value="spy_ssp_asset_notification_pk_seq"/>
    </table>

</database>
